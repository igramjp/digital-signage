{
  "name": "digital-signage",
  "private": true,
  "version": "0.2.9",
  "type": "module",
  "scripts": {
    "predev": "node scripts/generate-preload-manifest.mjs",
    "dev": "vite dev --host localhost --port 5173",
    "dev:fast": "vite dev --host localhost --port 5173 --force",
    "prebuild": "node scripts/generate-preload-manifest.mjs",
    "build": "vite build",
    "build:server": "npm run build && npm run serve",
    "serve": "vite preview --host localhost --port 5173",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:server": "tauri build --config src-tauri/tauri-server.conf.json",
    "tauri:build:ci": "tauri build",
    "clean": "bash scripts/clean.sh -y",
    "clean:dry": "bash scripts/clean.sh --dry-run",
    "clean:deep": "bash scripts/clean.sh -y --node-modules"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tauri-apps/cli": "^2.7.1",
    "@types/d3": "^7.4.3",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "@tauri-apps/api": "^2.8.0"
  }
}