{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "digital-signage",
  "version": "0.1.3",
  "identifier": "com.digital-signage",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Digital Signage",
        "width": 3840,
        "height": 2160,
        "resizable": true,
        "fullscreen": true,
        "center": true,
        "decorations": false,
        "minWidth": 1920,
        "minHeight": 1080
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null,
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    }
  }
}